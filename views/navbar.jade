//- img(style='max-height: 128px; width: auto;', src='img/logo.png')
mixin item(title, icon, sref)
    li(ui-sref=sref, ui-sref-active='active')&attributes(attributes).item
        i.fa(class="fa-#{icon} fa-fw")
        = title

ul.segment(app-permission, app-flag='anon')
    +item('Zaloguj się', 'sign-in', 'login')
    +item('Zarejestruj się', 'user-plus', 'register.request')

logged-only
    ul.segment
        +item('Twoje konto', 'user')
        +item('Wyloguj się', 'sign-out')(ng-click='fn.logout()')

    ul.segment
        +item('Kalendarz', 'calendar', 'calendar')
ul.segment
    +item('Informacje', 'info')