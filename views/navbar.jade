ul.segment
    +item('Aktualności', 'newspaper-o', 'news')
    +item('Galeria', 'photo', 'gallery')
    +item('Informacje', 'info', 'info')

ul.segment(app-permission, app-flag='anon')
    +item('Zaloguj się', 'sign-in', 'login')
    +item('Zarejestruj się', 'user-plus', 'register.request')

logged-only
    ul.segment
        +item('Twoje konto', 'user', 'account')
        +item('Wyloguj się', 'sign-out')(ng-click='fn.logout()')

    ul.segment
        +item('Wiadomości', 'envelope-o', 'inbox')
        +item('Kalendarz', 'calendar', 'calendar')
        li.item(ng-repeat='mod in mods', ui-sref='{{ mod.menu.ref }}', ui-sref-active='active')
            i.fa(class="fa-{{ mod.menu.icon }} fa-fw")
            | {{ mod.menu.title }}
            ul
                li.item(ng-repeat='link in mod.menu.sublinks', ui-sref='{{ link.ref }}')
                | {{ link.title }}

ul.segment
    +item('Github', 'github', null, 'http://github.com/2LO')
    +item('Facebook', 'facebook-f', null, 'https://www.facebook.com/OdBecikaKazdyKlika')
